{% extends 'base.html.twig' %}

{% block title %}Hello InscriptionController!
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<style>
		body {
			background-image: url('img/background.jpg');
		}
	</style>
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center">Inscription</h1>
		{{ form_start(FormulaireDInscription) }}
		<div class="form-group">
			{{ form_row(FormulaireDInscription.Nom, {'attr': {'class': 'form-control', 'placeholder': 'Veuillez entre votre nom!!'}}) }}
		</div>
		<div class="form-group">
			{{ form_row(FormulaireDInscription.Prenom, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_row(FormulaireDInscription.email, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_row(FormulaireDInscription.plainPassword, {'attr': {'class': 'form-control'}}) }}
		</div>

		<button type="submit" class="btn btn-block btn-primary">Register</button>
		{{ form_end(FormulaireDInscription) }}

	</div>
{% endblock %}
